{
  "name": "@axway/axway-cli-auth",
  "version": "4.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Authenticate machines with the Axway Amplify platform",
  "type": "module",
  "exports": "./dist/index.js",
  "author": "Axway, Inc. <npmjs@appcelerator.com>",
  "maintainers": [
    "Chris Barber <cbarber@axway.com>",
    "Ewan Harris <eharris@axway.com>"
  ],
  "license": "Apache-2.0",
  "keywords": [
    "axway",
    "amplify"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "c8 npm run test",
    "lint": "concurrently -s all -m 1 npm:lint:src npm:lint:test",
    "lint:src": "eslint src/**/*.ts",
    "lint:test": "eslint --parser-options=project:'test/tsconfig.json' test/**/*.ts",
    "prepublishOnly": "concurrently -s all -m 1 npm:lint:src npm:build",
    "test": "ts-mocha -n loader=ts-node/esm test/**/test-*.ts --reporter spec"
  },
  "dependencies": {
    "@axway/amplify-cli-utils": "^5.0.9",
    "@axway/amplify-utils": "^1.0.9",
    "cli-kit": "^1.16.0",
    "enquirer": "^2.3.6",
    "pretty-ms": "^8.0.0",
    "snooplogg": "^5.0.0",
    "uuid": "^8.3.2"
  },
  "homepage": "https://github.com/appcelerator/amplify-tooling#readme",
  "bugs": "https://github.com/appcelerator/amplify-tooling/issues",
  "repository": "https://github.com/appcelerator/amplify-tooling/tree/master/packages/axway-cli-auth",
  "engines": {
    "node": ">=14.15.0"
  },
  "cli-kit": {
    "exports": {
      "auth": {
        "desc": "Authenticate with the Axway Amplify platform",
        "main": "./dist/auth/index.js"
      },
      "service-account": {
        "aliases": [
          "!serviceaccount"
        ],
        "desc": "Create and manage service accounts",
        "main": "./dist/service-account/index.js"
      }
    }
  }
}
